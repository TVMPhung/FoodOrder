            </LinearLayout>
        </LinearLayout>
        
        <!-- Corner Accent -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/app_logo"
            android:alpha="0.3"/>
